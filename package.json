{
  "name": "ffxiv-teamcraft",
  "description": "Collaborative crafting made easy",
  "author": "Flavien Normand <contact@flavien-normand.fr>",
  "version": "5.0.0",
  "license": "MIT",
  "main": "main.js",
  "build": {
    "appId": "ffxivteamcraft",
    "artifactName": "${productName}-setup.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "dist"
    ],
    "mac": {
      "category": "public.app-category.games"
    },
    "win": {
      "icon": "build/icon.ico",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "include": "./tools/build/nsis/include.nsh",
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "node ./tools/build/prebuild.js && ng serve --project=client",
    "start:5.0": "node ./tools/build/prebuild.js && ng serve --project=client --configuration=preview",
    "build:prod": "node ./tools/build/prebuild.js && ng build --project=client --prod",
    "build:electron-prod": "node ./tools/build/prebuild.js && ng build --project=client --configuration=electron",
    "build:beta": "node ./tools/build/prebuild.js && ng build --project=client --configuration=beta",
    "build:preview": "node ./tools/build/prebuild.js && ng build --project=client --configuration=preview",
    "standard-version": "standard-version",
    "standard-version:patch": "standard-version --release-as patch",
    "standard-version:minor": "standard-version --release-as minor",
    "standard-version:dry": "standard-version --dry-run",
    "release:prod": "git push --follow-tags origin master",
    "release:beta": "npm run standard-version -- --prerelease beta && git push --follow-tags origin beta",
    "test": "node ./tools/build/prebuild.js && ng test --project=client --watch=false --code-coverage",
    "codecov": "cat coverage/lcov.info | codecov",
    "lint": "ng lint && jsonlint-cli ./src/assets/i18n/*.json",
    "e2e": "ng e2e",
    "commitmsg": "validate-commit-msg",
    "prerelease": "npm test",
    "commit": "git-cz",
    "translations:clean": "node tools/translations-cleaner.js",
    "build:watch": "node ./tools/build/prebuild.js && ng build --project=client --watch --configuration=electron-dev",
    "electron:start": "electron ./main.js",
    "electron:start:no-decorators": "electron ./main.js --native-titlebar",
    "electron:setup:build": "del-cli release/* && npm run build:electron-prod && electron-builder --win",
    "electron:setup:publish": "del-cli release/* && npm run build:electron-prod && electron-builder --win -p always",
    "postinstall": "electron-builder install-app-deps",
    "release:full": "npm run build:prod && firebase deploy -P default --only hosting && npm run electron:setup:publish",
    "pack": "electron-builder --dir",
    "affected:apps": "./node_modules/.bin/nx affected:apps",
    "affected:libs": "./node_modules/.bin/nx affected:libs",
    "affected:build": "./node_modules/.bin/nx affected:build",
    "affected:e2e": "./node_modules/.bin/nx affected:e2e",
    "affected:test": "./node_modules/.bin/nx affected:test",
    "affected:lint": "./node_modules/.bin/nx affected:lint",
    "affected:dep-graph": "./node_modules/.bin/nx affected:dep-graph",
    "format": "./node_modules/.bin/nx format:write",
    "format:write": "./node_modules/.bin/nx format:write",
    "format:check": "./node_modules/.bin/nx format:check",
    "update": "ng update @nrwl/schematics",
    "update:check": "ng update",
    "workspace-schematic": "./node_modules/.bin/nx workspace-schematic",
    "dep-graph": "./node_modules/.bin/nx dep-graph",
    "help": "./node_modules/.bin/nx help",
    "ng:g": "ng g --project=client --styleext=less --spec=false"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/flex-layout": "^6.0.0-beta.17",
    "@angular/forms": "^6.1.0",
    "@angular/http": "6.1.3",
    "@angular/material": "6.4.6",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "@fortawesome/fontawesome": "^1.1.8",
    "@fortawesome/fontawesome-free-brands": "^5.0.13",
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "@fortawesome/fontawesome-free-webfonts": "^1.0.9",
    "@kaiu/ng-serializer": "1.1.1",
    "@kaiu/serializer": "1.2.1",
    "@ngrx/effects": "6.0.1",
    "@ngrx/entity": "^6.0.1",
    "@ngrx/router-store": "6.0.1",
    "@ngrx/store": "6.0.1",
    "@ngx-translate/core": "^10.0.1",
    "@ngx-translate/http-loader": "^3.0.1",
    "@nrwl/nx": "6.2.1",
    "@types/jwt-decode": "^2.2.1",
    "@types/semver": "^5.4.0",
    "@xivapi/angular-client": "^0.6.0",
    "angularfire2": "5.0.0-rc.8",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.5.4",
    "electron-config": "^1.0.0",
    "electron-log": "^2.2.14",
    "electron-oauth2": "^3.0.0",
    "electron-updater": "^2.21.10",
    "firebase": "^5.0.2",
    "hammerjs": "^2.0.8",
    "jwt-decode": "^2.2.0",
    "less": "^2.7.3",
    "lodash": "^4.17.10",
    "ng-drag-drop": "^5.0.0",
    "ng-push": "^0.2.1",
    "ng-zorro-antd": "1.5.0",
    "ngx-clipboard": "11.0.0",
    "ngx-markdown": "^1.6.0",
    "rxjs": "^6.0.0",
    "semver": "^5.4.1",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.0",
    "@angular-devkit/schematics": "^0.7.5",
    "@angular/cli": "6.1.5",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@biesbjerg/ngx-translate-extract": "^2.3.4",
    "@firebase/auth-types": "^0.3.2",
    "@ngrx/schematics": "^6.1.0",
    "@ngrx/store-devtools": "6.1.0",
    "@nrwl/schematics": "6.2.1",
    "@types/electron": "^1.6.10",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codecov": "latest",
    "codelyzer": "~4.2.1",
    "colors": "latest",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "del-cli": "^1.1.0",
    "electron": "^1.8.7",
    "electron-builder": "^20.28.3",
    "electron-is-dev": "^0.3.0",
    "electron-reload": "^1.2.2",
    "express": "^4.16.3",
    "firebase-tools": "^4.0.1",
    "husky": "^0.14.3",
    "jasmine": "2.99.0",
    "jasmine-core": "~2.99.1",
    "jasmine-marbles": "0.3.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jsonlint-cli": "^1.0.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "~1.4.2",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ngrx-store-freeze": "0.2.4",
    "node-sass": "^4.9.0",
    "prettier": "1.13.7",
    "protractor": "~5.3.0",
    "rxjs-compat": "^6.1.0",
    "standard-version": "^4.4.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2",
    "validate-commit-msg": "^2.14.0",
    "webpack-bundle-analyzer": "^2.13.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "standard-version": {
    "skip": {
      "tag": true
    }
  }
}
