{
  "name": "ffxiv-teamcraft",
  "description": "Collaborative crafting made easy",
  "homepage": "https://ffxivteamcraft.com",
  "author": "Flavien Normand <contact@flavien-normand.fr>",
  "version": "5.1.0",
  "license": "MIT",
  "main": "desktop/main.js",
  "build": {
    "appId": "ffxivteamcraft",
    "forceCodeSigning": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "desktop/main.js",
      "desktop/oauth.js",
      "dist"
    ],
    "protocols": {
      "name": "ffxiv-teamcraft",
      "schemes": [
        "teamcraft"
      ]
    },
    "mac": {
      "category": "public.app-category.games"
    },
    "win": {
      "icon": "./tools/build/icon.ico",
      "publisherName": "FFXIV Teamcraft",
      "publish": {
        "provider": "github",
        "releaseType": "release"
      }
    },
    "nsis": {
      "include": "./tools/build/nsis/include.nsh",
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "node ./tools/build/prebuild.js && ng serve --project=client",
    "build:watch": "node ./tools/build/prebuild.js && ng build --project=client --watch --configuration=electron-dev",
    "build:prod": "node ./tools/build/prebuild.js && ng build --project=client --prod",
    "build:electron-prod": "node ./tools/build/prebuild.js && ng build --project=client --configuration=electron",
    "build:electron-dev": "node ./tools/build/prebuild.js && ng build --project=client --configuration=electron-dev",
    "build:beta": "node ./tools/build/prebuild.js && ng build --project=client --configuration=beta",
    "standard-version": "standard-version",
    "standard-version:patch": "standard-version --release-as patch",
    "standard-version:minor": "standard-version --release-as minor",
    "standard-version:dry": "standard-version --dry-run",
    "release:prod": "git push --follow-tags origin master",
    "release:beta": "npm run standard-version -- --prerelease beta && git push --follow-tags origin beta",
    "test": "node ./tools/build/prebuild.js && ng test --project=client --watch=false --code-coverage",
    "codecov": "cat coverage/lcov.info | codecov",
    "lint": "ng lint && jsonlint-cli ./src/assets/i18n/*.json",
    "e2e": "node ./tools/build/prebuild.js && ng e2e client-e2e",
    "e2e:watch": "node ./tools/build/prebuild.js && ng e2e client-e2e --watch",
    "e2e:ci": "node ./tools/build/prebuild.js && ng e2e client-e2e --headless",
    "commitmsg": "validate-commit-msg",
    "prerelease": "npm test",
    "commit": "git-cz",
    "electron:start": "electron ./desktop/main.js",
    "electron:start:no-decorators": "electron ./desktop/main.js --native-titlebar",
    "electron:setup:build": "del-cli release/* && npm run build:electron-prod && electron-builder --win",
    "electron:setup:build-dev": "del-cli release/* && npm run build:electron-dev && electron-builder --win --dir",
    "electron:setup:build-beta": "del-cli release/* && npm run build:electron-dev && electron-builder --win",
    "electron:setup:publish": "del-cli release/* && npm run build:electron-prod && electron-builder --win -p always",
    "postinstall": "electron-builder install-app-deps",
    "release:full": "npm run build:prod && firebase deploy -P default --only hosting && npm run electron:setup:publish",
    "pack": "electron-builder --dir",
    "update": "ng update @nrwl/schematics",
    "update:check": "ng update",
    "electron-builder": "electron-builder",
    "***********SSR STUFF***************": "",
    "build": "ng build && npm run build:ssr",
    "build:ssr": "ng run client:server && npm run webpack:ssr",
    "webpack:ssr": "webpack --config webpack.server.config.js",
    "serve:ssr": "node dist/client-webpack/server.js",
    "*********** STATS STUFF **************": "",
    "build:stats": "node ./tools/build/prebuild.js && ng build --project=client --prod --stats-json",
    "bundle-analyzer": "webpack-bundle-analyzer dist/apps/client/stats.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.1",
    "@angular/common": "^7.2.1",
    "@angular/compiler": "^7.2.1",
    "@angular/core": "^7.2.1",
    "@angular/fire": "^5.1.0",
    "@angular/flex-layout": "^7.0.0-beta.19",
    "@angular/forms": "^7.2.1",
    "@angular/http": "7.2.1",
    "@angular/platform-browser": "^7.2.1",
    "@angular/platform-browser-dynamic": "^7.2.1",
    "@angular/platform-server": "^7.2.1",
    "@angular/router": "^7.2.1",
    "@fortawesome/fontawesome": "^1.1.8",
    "@fortawesome/fontawesome-free-brands": "^5.0.13",
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "@fortawesome/fontawesome-free-webfonts": "^1.0.9",
    "@kaiu/ng-serializer": "1.1.1",
    "@kaiu/serializer": "1.2.1",
    "@ngrx/effects": "7.0.0",
    "@ngrx/entity": "^7.0.0",
    "@ngrx/router-store": "7.0.0",
    "@ngrx/store": "7.0.0",
    "@ngx-translate/core": "^10.0.1",
    "@ngx-translate/http-loader": "^3.0.1",
    "@nrwl/nx": "7.5.1",
    "@swimlane/dragula": "^3.7.3",
    "@swimlane/ngx-dnd": "^5.1.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/semver": "^5.4.0",
    "@xivapi/angular-client": "^0.10.6",
    "angular-feather": "^5.3.0",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.5.4",
    "electron-config": "^1.0.0",
    "electron-is-dev": "^1.0.1",
    "electron-log": "^2.2.17",
    "electron-oauth-helper": "^2.0.3",
    "electron-updater": "3.2.3",
    "express": "^4.16.4",
    "file-saver": "^2.0.1",
    "firebase": "^5.5.0",
    "hammerjs": "^2.0.8",
    "jwt-decode": "^2.2.0",
    "less": "^2.7.3",
    "lodash": "^4.17.10",
    "ng-drag-drop": "^5.0.0",
    "ng-push": "^0.2.1",
    "ng-zorro-antd": "7.0.0",
    "ngx-clipboard": "11.0.0",
    "ngx-markdown": "^1.6.0",
    "papaparse": "^4.6.3",
    "rxjs": "^6.0.0",
    "semver": "^5.4.1",
    "tslib": "^1.9.0",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular/cli": "~7.2.2",
    "@nrwl/schematics": "7.5.1",
    "cypress": "^3.1.5",
    "@nrwl/builders": "7.5.1",
    "@angular-devkit/build-angular": "~0.11.0",
    "@angular-devkit/schematics": "^0.8.8",
    "@angular/compiler-cli": "^7.2.1",
    "@angular/language-service": "^7.2.1",
    "@firebase/auth-types": "^0.4.0",
    "@ngrx/schematics": "^7.0.0",
    "@ngrx/store-devtools": "7.0.0",
    "@types/electron": "^1.6.10",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codecov": "^3.1.0",
    "codelyzer": "~4.2.1",
    "colors": "^1.3.2",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "del-cli": "^1.1.0",
    "electron": "^2.0.14",
    "electron-builder": "20.34.0",
    "electron-reload": "^1.2.2",
    "firebase-tools": "^4.0.1",
    "husky": "^0.14.3",
    "jasmine": "2.99.0",
    "jasmine-core": "~2.99.1",
    "jasmine-marbles": "0.3.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jsonlint-cli": "^1.0.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "~1.4.2",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ngrx-store-freeze": "0.2.4",
    "node-sass": "^4.9.0",
    "prettier": "1.13.7",
    "protractor": "~5.3.0",
    "rxjs-compat": "^6.1.0",
    "standard-version": "^4.4.0",
    "ts-loader": "^5.2.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~3.1.6",
    "validate-commit-msg": "^2.14.0",
    "webpack-bundle-analyzer": "^3.0.3",
    "ws": "^6.0.0",
    "xhr2": "^0.1.4"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "standard-version": {
    "skip": {
      "tag": true
    }
  }
}
