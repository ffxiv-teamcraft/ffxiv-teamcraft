{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {},
    "rootDir": ".",
    "outDir": "./build"
  },
  "files": [
    "src/main.ts"
  ]
}
